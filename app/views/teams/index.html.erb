<h1>Listing Teams</h1>
<table class="striped">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
  <% @teams.each do |team| %>
    <tr>
      <td><%= team.name %></td>
      <td><%= team.city %></td>
      <td><%= link_to 'Show', team_path(team) %></td>
      <%if current_user != nil %>
        <%if current_user.admin?%>
          <td><%= link_to 'Edit', edit_team_path(team) %></td>
            <td><%= link_to 'Destroy', team_path(team),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      <%end%>
    </tr>
  <% end %>
</table>
<%if current_user != nil%>
  <%if current_user.admin? %>
    <div class="fixed-action-btn">
      <%= link_to new_team_path, :class=>'btn-floating btn-large waves-effect waves-light red' do %>
        <i class="material-icons">add</i>
      <% end %>
    </div>
  <% end %>
<% end %>