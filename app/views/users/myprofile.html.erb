<%# User info %>
<div class="row">
  <div class="profile card col s12 row">
    <%# Settings %>
    <div class="col s12 right-align">
    <%= link_to edit_user_path(@user) do %>
      <i class="black-text material-icons">settings</i>
    <% end %>
    </div>
    <%# Image %>
    <div class="col s12 m4">
      <%= image_tag "data:image/jpeg;base64,#{@user.image}", :class => 'user-image' %>
    </div>
    <%# Info %>
    <div class="col s12 m8">
      <div class="row">
        <div class="col s12 m6">
          <h7>Name</h7>
          <h5><%= @user.first_name %></h5>
        </div>
        <div class="col s12 m6">
          <h7>Surname</h7>
          <h5><%= @user.last_name %></h5>
        </div>
        <div class="col s12">
          <h7>Email</h7>
          <h5><%= @user.email %></h5>
        </div>
      </div>
    </div>
  </div>
</div>
<%# Preferred discussions %>
<div class="row">
  <div class="starred-discussions col s12">
    <h6 class="text-primary-color">Preferred discussions</h6>
    <div class="divider"></div>
    <div class="row">
      <% current_user.discussion_stars.each do |star| %>
        <div class="starred-discussion col s12 m4">
          <div class="card">
            <%= link_to discussion_path(star.discussion) do %>
              <h5><%= star.discussion.title %></h5>
              <p><%= star.discussion.body[1..100] %> ...</p>
            <% end %>
          </div>
        </div>
      <% end %>
  </div>
</div>
<%#Preferred playbooks %>
<div class="row">
  <div class="starred-playbooks col s12">
    <h6 class="text-primary-color">Preferred playbooks</h6>
    <div class="divider"></div>
    <div class="row">
      <% current_user.playbook_stars.each do |star| %>
        <div class="starred-playbook col s12 m4">
          <div class="card">
            <%= link_to playbook_path(star.playbook) do %>
              <h5><%= star.playbook.title %></h5>
              <p><%= star.playbook.body[1..100] %> ...</p>
            <% end %>
          </div>
        </div>
      <% end %>
  </div>
</div>