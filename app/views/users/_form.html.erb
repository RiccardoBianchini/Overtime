<%= form_for @user do |form| %>
	<div class="row">
		<div class="input-field col s12 m6">
			<%= form.label :first_name %>
			<%= form.text_field :first_name %>
		</div>
		<div class="input-field col s12 m6">
			<%= form.label :last_name %>
			<%= form.text_field :last_name %>
		</div>
	</div>

	<div class="row">
		<div class="input-field col s12 m6">
			<%= form.label :email %>
			<%= form.email_field :email %>
		</div>

		<div class="input-field col s12 m6">
			<%= form.label :address %>
			<%= form.text_field :address %>
		</div>
	</div>

	<div class="row">
		<div class="input-field col s12 m6">
			<%= form.label :born_on %>
			<%= form.date_field :born_on %>
		</div>
		<div class="input-field col s12 m6">
			<%= form.label :born_at %>
			<%= form.text_field :born_at %>
		</div>
	</div>

	<div class="row">
		<div class="input-field col s12 m4">
			<%= form.collection_select(:team_id, Team.all, :id, :name) %>
			<label>Team</label>
		</div>
		<div class="file-field input-field col s12 m8">
			<div class="btn">
				<span>File</span>
				<%= form.file_field :image %>
			</div>
			<div class="file-path-wrapper">
				<input class="file-path validate" type="text">
			</div>
		</div>
	</div>
	
	<%if current_user.admin? %>
		<p>
			<label>
				<%= form.check_box :admin, :class => 'filled-in' %>
				<span>Admin</span>
			</label>
		</p>
	<% end %>

	<%= form.submit 'Edit User', :class => 'waves-effect waves-light btn' %>
<% end %>