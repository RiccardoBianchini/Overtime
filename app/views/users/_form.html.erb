<br>
<%= form_for(@user) do |f| %>

	<%= f.label :First_name %> (this field can't be blank)
	<%= f.text_field :first_name%>
    <br>

	<%= f.label :Second_name %> (this field can't be blank)
	<%= f.text_field :second_name%>
    <br>

	<%= f.label :email %>
	<%= f.email_field :email%>
    <br>

	<%= f.label :Address %>
	<%= f.text_field :address%>
    <br>

	<%= f.label :Born_on %> (year should be 4 digits)
	<%= f.date_field :born_on%>
    <br>

	<%= f.label :Born_at %>
	<%= f.text_field :born_at%>
	<br>

	<%= f.submit "Save changes" %>
	<%= link_to "Home", root_path %>
	<br><br>
<% end %>