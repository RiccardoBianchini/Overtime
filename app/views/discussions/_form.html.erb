
<%= form_for @discussion do |form| %>
    <div class="input-field">
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    
    <div class="input-field">
        <%= form.label :body %>
        <%= form.text_area :body, :class => 'materialize-textarea' %>
    </div>
    
    <%= form.submit 'Create Comment', :class => 'waves-effect waves-light btn' %>
<% end %>