<%= form_for @playbook, local: true do |form| %>
 
  <% if @playbook.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@playbook.errors.count, "error") %> prohibited
        this playbook from being saved:
      </h2>
      <ul>
        <% @playbook.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>

  <div class="file-field input-field col s12 m8">
    <div class="btn">
      <span>File</span>
      <%= form.file_field :image %>
    </div>
    <div class="file-path-wrapper">
      <input class="file-path validate" type="text">
    </div>
  </div>
 
  <p>
    <%= form.submit %>
  </p>
 
<% end %>