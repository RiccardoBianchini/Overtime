
<div class="article-show">
  <div class="row">
    <div class="col s10 offset-s1">
      <h1> <%= @article.title %></h1>
    </div>
      <div class="col s8 offset-s2 article-text">
          <%= @article.body %>
      </div>
  </div>
</div>
