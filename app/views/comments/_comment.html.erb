<p>
    <strong><%= comment.user.email %>: </strong><%= comment.content %>
    <% if comment.user == current_user %>
        <b><%= link_to 'Delete Comment', discussion_comment_path(@discussion, comment),
                    method: :delete,
                    data: { confirm: 'Are you sure to delete the comment?' },
                    :class => 'red-text' %>
        </b>
    <% end %>
</p>